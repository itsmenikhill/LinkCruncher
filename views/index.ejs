<!DOCTYPE html>
<html lang="en">
  <head>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
      
    />
    <link rel="stylesheet" href="/css/styles.css">
    <style>
      /* Popup container - can be anything you want */
      
    </style>
  </head>
  <body>
    <script src="../server.js"></script>
    <div class="container" id="container">
      <h3 class="my-4">LinkCrunch</h3>
      <form action="/crunchLink" method="POST" class="form-inline my-4">
        <input
          placeholder="URL"
          type="url"
          name="fullUrl"
          id="fullUrl"
          class="form-control col mr-2 my-2"
        />
        <button type="submit" class="btn btn-success">Shorten URL</button>
        <% if(typeof message !== 'undefined'){%>
        <div id="alert-message" class="alert alert-warning my-2">
          <%= message %>
        </div>
        <%}%>
      </form>

      <table class="table table-striped">
        <thead>
          <tr>
            <th>Full URL</th>
            <th>Short URL</th>
            <th>QR Code</th>
          </tr>
        </thead>
        <tbody>
          <% shortUrls.forEach(shortUrl => { %>
          <tr>
            <td><a href="<%= shortUrl.full %>"><%= shortUrl.full %></a></td>
            <td><a href="<%= shortUrl.short %>"><%= shortUrl.short %></a></td>
            <td>
              <button class="show-qr-button" data-url="<%= shortUrl.full %>">
                Show QR Code
              </button>
              <img
                class="qr-code"
                src=""
                alt="QR Code"
                title="QR Code"
                style="display: none"
              />
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
      <div id="qrPopup" class="popup">
        <div class="popup-content">
          <span class="close">&times;</span>
          <img id="qrImage" src="" alt="QR Code" title="QR Code" />
        </div>
      </div>
    </div>

    <script src="js/alert.js"></script>
    <script src="js/qrCodeButton.js"></script>
  </body>
</html>
