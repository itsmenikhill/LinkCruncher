<!DOCTYPE html>
<html lang="en">
  <head>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <script src='../server.js'></script>
    <div class="container" id='container'>
      <h3 class="my-4">LinkCrunch</h3>
      <form action="/crunchLink" method="POST" class="form-inline my-4">
        <!-- <label for="fullUrl">URL</label> -->
        <input
          placeholder="URL"
          type="url"
          name="fullUrl"
          id="fullUrl"
          class="form-control col mr-2 my-2"
        />
        <button type="submit" class="btn btn-success">Shorten URL</button>
      </form>

      <table class="table table-striped">
        <thead>
          <tr>
            <th>Full URL</th>
            <th>Short URL</th>
          </tr>
        </thead>
        <tbody>
          <% shortUrls.forEach(shortUrl => { %>
          <tr>
            <td><a href="<%= shortUrl.full %>"><%= shortUrl.full %></a></td>
            <td><a href="<%= shortUrl.short %>"><%= shortUrl.short %></a></td>
            <td><%= shortUrl.clicks %></td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </body>
</html>
